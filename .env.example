# ===========================================
# BizBranches - Environment Variables
# Copy to .env in root, frontend/, and backend/
# ===========================================

# ---- BACKEND (backend/.env) ----
PORT=3001
HOST=0.0.0.0
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=bizbranches

# Cloudinary (image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Optional: Leopard Courier API (Pakistan cities / shipping)
# Get credentials from Leopards Courier merchant portal.
LEOPARDS_API_BASE_URL=https://merchantapi.leopardscourier.com/api
LEOPARDS_API_KEY=your_leopards_api_key
LEOPARDS_API_PASSWORD=your_leopards_api_password

# Optional: Admin secret for status updates and admin API
ADMIN_SECRET=your_admin_secret

# Email (confirmation after auto-approval) - use your SMTP credentials
# Do not commit real passwords; set in Railway/server env only.
SMTP_HOST=mail.example.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=support@example.com
SMTP_PASS=your_email_password
EMAIL_FROM=support@example.com
EMAIL_FROM_NAME=BizBranches Support
EMAIL_REPLY_TO=
SUPPORT_EMAIL=support@example.com
SITE_URL=https://bizbranches.pk

# ---- FRONTEND (frontend/.env.local) ----
# Backend API URL - used for server-side fetches and rewrites
NEXT_PUBLIC_BACKEND_URL=http://localhost:3001
# Or: NEXT_PUBLIC_API_URL=http://localhost:3001

# Cloudinary (client-side image URLs)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name

# Production
# SITE_URL=https://bizbranches.pk
# NEXT_PUBLIC_BACKEND_URL=https://api.bizbranches.pk
# FRONTEND_URL=https://bizbranches.pk
